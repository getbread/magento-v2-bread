<?xml version="1.0"?>
<!--
/**
 * Bread BreadCheckout - Hyva Checkout Layout
 * Registers Bread payment method with Hyva Checkout
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <script src="Bread_BreadCheckout::js/hyva/sdk-loader.js"/>
        <script src="Bread_BreadCheckout::js/hyva/checkout-payment.js"/>
    </head>
    <body>
        <referenceContainer name="head.additional">
            <block class="Bread\BreadCheckout\Block\Js" 
                   name="breadcheckout.checkout.js" 
                   template="Bread_BreadCheckout::hyva/js.phtml"/>
        </referenceContainer>
        <referenceBlock name="checkout.payment.methods">
            <block name="checkout.payment.method.breadcheckout"
                   as="breadcheckout"
                   template="Bread_BreadCheckout::hyva/checkout/payment/method/breadcheckout.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">Bread\BreadCheckout\Magewire\Checkout\Payment\Method\BreadCheckout</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
